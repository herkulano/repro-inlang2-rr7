{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			/* Internal */
			"#/*": ["app/*"],

			/* Libraries */
			"@acme/i18n/*": ["../../libs/i18n/src/*"],
			"@acme/i18n/runtime": ["../../libs/i18n/src/paraglide/runtime.js"],
			"@acme/i18n/messages": ["../../libs/i18n/src/paraglide/messages.js"]
		},
		"types": ["@react-router/node", "vite/client"],
		"rootDirs": [".", "./.react-router/types"],
		"plugins": [{ "name": "@react-router/dev" }]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/.server/**/*.ts",
		"**/.server/**/*.tsx",
		"**/.client/**/*.ts",
		"**/.client/**/*.tsx",
		".react-router/types/**/*"
	]
}
